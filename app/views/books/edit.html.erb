<div>
  <h2>Edit book</h2>
  <% if @book.errors.any? %>
    <%= @book.errors.count %>件のエラーが発生しました
    <ul>
      <% @book.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  <% end %>

  <%= form_with model: @book do |f| %>
    <%= f.label "Title" %> <br>
    <%= f.text_field :title %> <br>
    <%= f.label "Body" %> <br>
    <%= f.text_area :body %> <br>
    <%= f.submit "Update Book" %>
  <% end %>
  <p><%= link_to "Show", book_path(@book.id), class: "link" %> | <%= link_to "Back", books_path, class: "link" %></p>
</div>