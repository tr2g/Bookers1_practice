<h1>Books</h1>
<div>
  <% @books.each do |book| %>
  <table>
    <th>Title</th>
    <th>Body</th>
  </table>
  <% end %>
</div>

<div>
  <h2>New book</h2>
  <%= form_with model: @book, method: :post do |f| %>
    <%= f.label "Title" %> <br>
    <%= f.text_field :title %> <br>
    <%= f.label "Body" %> <br>
    <%= f.text_area :body %> <br>
    <%= f.submit "Create Book" %>
  <% end %>
</div>