<h1>Books</h1>
<div>
  <table>
    <thead>
      <tr>
        <th>Title</th>
        <th>Body</th>
        <th></th>
      </tr>
    </thead>
    <% @books.each do |book| %>
    <tbody>
      <tr>
        <td><%= book.title %></td>
        <td><%= book.body %></td>
        <td><%= link_to "Show", book_path(book.id) %></td>
        <td><%= link_to "Edit", edit_book_path(book.id) %></td>
        <td><%= link_to "Destroy", book_path(book.id), method: :delete %></td>
      </tr>
    </tbody>
  </table>
  <% end %>
</div>

<div>
  <h2>New book</h2>
  <%= form_with model: @book, method: :post do |f| %>
    <%= f.label "Title" %> <br>
    <%= f.text_field :title %> <br>
    <%= f.label "Body" %> <br>
    <%= f.text_area :body %> <br>
    <%= f.submit "Create Book" %>
  <% end %>
</div>