<div>
  <h2>New book</h2>
  <% if @book.errors.any? %>
    <%= @book.errors.count %>件のエラーが発生しました
    <ul>
      <% @book.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  <% end %>

  <%= form_with model: @book, method: :post do |f| %>
    <%= f.label "Title" %> <br>
    <%= f.text_field :title %> <br>
    <%= f.label "Body" %> <br>
    <%= f.text_area :body %> <br>
    <%= f.submit "Create Book" %>
  <% end %>
</div>